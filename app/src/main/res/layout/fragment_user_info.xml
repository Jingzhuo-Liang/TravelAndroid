<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.UserInfoFragment">

    <com.example.travel.widget.TitleLayout
        android:id="@+id/my_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--简介-->
    <LinearLayout
        android:id="@+id/layer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.example.travel.widget.RoundImageView
                android:id="@+id/my_portrait"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/padding_left_and_right"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_portrait"
                android:layout_marginStart="@dimen/padding_left_and_right" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_username"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_signature"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:text=""
                    android:textColor="@color/gray3"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/my_focusNum"
                    android:text="0"
                    android:textColor="@color/gray3"
                    android:textSize="15sp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 关注"
                    android:textColor="@color/gray3"
                    android:textSize="15sp"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/my_beFocusedNum"
                    android:text="0"
                    android:textColor="@color/gray3"
                    android:textSize="15sp"
                    >
                </TextView>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" 粉丝"
                android:textColor="@color/gray3"
                android:textSize="15sp"
                >
            </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/user_info_slideTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_indicator_height="3dp"
            tl:tl_indicator_width="17dp"
            tl:tl_textSelectColor="@color/black"
            tl:tl_textUnselectColor="@color/text_color"
            tl:tl_textsize="15sp"
            tl:tl_indicator_color="#fdf299"
            />
    </LinearLayout>
    <com.example.travel.view.FixedViewPage
        android:id="@+id/user_info_fixedViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>